@model Model.Command

@{
    ViewBag.Title = "CommandDetail";
    Layout = "~/Views/Shared/templateback.cshtml";
}

<body style="background-color:none;">
    <div class="card" style="background-color:white;">
    <div class="card-header">
        <h6 style="color:gold">
            <b>
               Oder Number:@Html.DisplayFor(model=>model.idcmd)
            </b>
        </h6>
    </div>
    <div class="card-body" >


        <div class="form-group row">
            <label class="col-sm-5 col-form-label">Name</label>
            <div class="col-sm-7">
                @Html.DisplayFor(model => model.name)
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-5 col-form-label">Adress</label>
            <div class="col-sm-7">
                @Html.DisplayFor(model => model.adresse)
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-5 col-form-label">City</label>
            <div class="col-sm-7">
                @Html.DisplayFor(model => model.gov)
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-5 col-form-label">Zip code</label>
            <div class="col-sm-7">
                @Html.DisplayFor(model => model.code)
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-5 col-form-label">Phone number</label>
            <div class="col-sm-7">
                @Html.DisplayFor(model => model.phone)
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-5 col-form-label">Phone number 2</label>
            <div class="col-sm-7">
                @Html.DisplayFor(model => model.phone2)
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-5 col-form-label">E-mail</label>
            <div class="col-sm-7">
                @Html.DisplayFor(model => model.email)
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-5 col-form-label">Product Name</label>
            <div class="col-sm-7">
                @Html.DisplayFor(model => model.product.nameprod)
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-5 col-form-label">Quantity</label>
            <div class="col-sm-7">
                @Html.DisplayFor(model => model.qteprod)
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-5 col-form-label">total price</label>
            <div class="col-sm-7">
                @ViewBag.price
            </div>

        </div>
    </div>
        </div>
</body>