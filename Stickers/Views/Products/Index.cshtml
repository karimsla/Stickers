@model IEnumerable<Model.Product>

@{
    Layout = "~/Views/Shared/TemplateProducts.cshtml";
}




<br /><br />
<br />
<br /><br />
      <div class="form-row col-md-12">
          @using (Html.BeginForm())
          {
              Html.AntiForgeryToken();
              <div class="form-group col-md-8">
                  <input class="form-control" name="search" placeholder="Search for products..." />
              </div>

              <div class="form-group col-md-1">
                  <button type="submit" class="but">Search</button>
              </div>
              <div class="form-group col-md-3">
                  <select name="type" class="form-control" style="border:2px solid gold">
                      <option value="desc">Sort by : Latest</option>
                      <option value="asc">Sort by : Oldest</option>
                  </select>
              </div>

          }
      </div>
<br />
<br />
<div class="col-md-12">
    <br />
    <div class="awesome-project-content">

        @foreach (var item in Model)
        {

            <div class="col-md-4 col-sm-4 col-xs-12 ">
                <a href="/Products/Details/@item.idprod">
                    <div class="single-awesome-project">
                        <div class="awesome-img">

                            <img src="~/Content/stickerspic/@item.imgprod" alt="" style="height:300px;width:100%" />
                            <div class="add-actions text-center">
                                <div class="project-dec">
                                    <h4>@item.nameprod</h4>
                                    <span>@item.price DT</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }

    </div>

</div>
<div class="row text-center">
    
    @using (Html.BeginForm())
    { Html.AntiForgeryToken();

        for (int i = 0; i <= (int)ViewBag.pagenb; i++)
        {
            var j = i + 1;
         
        <button type="submit" name="btPage" class="pa" value="@j">@j</button>
            }
        
    }
</div>
<style>
 
    .pa{
        background-color:white;
        color:black;
        border-color:gold;
    }
    .pa:hover
    {
      background-color:gold;
      color:white;     
    }

    .but {
        background-color: white;
        color: black;
        border: 2px solid gold;
        padding: 5px 15px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        -webkit-transition-duration: 0.4s; /* Safari */
        transition-duration: 0.4s;
    }

        .but:hover {
            background-color: gold; /* Green */
            color: white;
            border-radius: 10px 10px 10px 10px;
        }
</style>